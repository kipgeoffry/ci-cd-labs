pipeline {
  agent {
    dockerContainer { image 'kipgeoffry/jenkins-agent-python:3.9' }
  }
  stages {
    stage('Check node') {
      steps {
        sh 'python3 --version'
      }
    }
     stage('Check hostname') {
       steps {
         sh 'cat /etc/hostname'
       }
     }
          steps {
            sh 'ping 4.2.2.2'
          }
        }
  }
}

pipeline {
  agent {
    dockerContainer { image 'kipgeoffry/jenkins-agent-python:3.9' }
  }
  stages {
    stage('Check node') {
      steps {
        sh 'python3 --version'
      }
    }
     stage('Check hostname') {
          steps {
            sh 'cat /etc/hostname'
          }
        }
  }
}
